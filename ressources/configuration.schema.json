{
    "name": "Configuration",
    "type": "object",
    "additionalProperties": true,
    "properties": {
        "gearman-servers": {
            "type": "array",
            "description": "Gearman Servers list",
            "required": true,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": true,
                "properties": {
                    "host": {
                        "type": "string",
                        "description": "Gearman Server hostname",
                        "required": true
                    },
                    "port": {
                        "type": "number",
                        "description": "Gearman Server port",
                        "required": true
                    }
                }
            }
        },
        "delivery": {
            "type": "object",
            "description": "Delivery system",
            "additionalProperties": false,
            "required": true,
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The classname of the delivery system",
                    "required": true
                },
                "configuration": {
                    "type": "object",
                    "description": "Delivery configuration",
                    "required": true
                }
            }
        }
    }
}
